---
import { siteConfig } from "../../site.config";

const { pathname } = Astro.url;

const menuPages = [
  { name: "Articles", href: "/articles" },
  { name: "Notes", href: "/notes" },
  { name: "Traductions", href: "/translations" },
  { name: "Ã€ propos", href: "/about" }
];
---

<header
  class="sticky top-0 flex flex-col md:flex-row justify-between md:items-center w-full bg-secondary dark:bg-primary z-20"
>
  <a
    href="/"
    class="font-display px-3 py-2 md:p-4 text-2xl md:text-3xl -rotate-4 origin-bottom-left"
  >
    {siteConfig.title}
  </a>

  <nav
    class="flex md:justify-end items-center gap-6 max-md:border-t border-primary dark:border-secondary px-3 py-2 md:p-4"
  >
    {
      menuPages.map((page) => (
        <a
          href={page.href}
          class={`hover:opacity-70 transition-opacity ${pathname.startsWith(page.href) && "italic"}`}
        >
          {page.name}
        </a>
      ))
    }
  </nav>
</header>
